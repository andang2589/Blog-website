@model BlogWebsite.DTO.Blog.BlogPostDTO
<link href="/css/bundle.css" rel="stylesheet" />
<div class="container">
    <div class="return-post-index text-primary link-primary btn">
        return to list
    </div>
    <form action="UpdatePost" method="post" enctype="multipart/form-data">
        <div class="">
            <div>
                <input type="hidden" name="ThumbnailUrl" value="@Model.ThumbnailUrl" />
            </div>
            <div class="input-group mb-3">
                <span asp-validation-for="Title" class="input-group-text" id="inputGroup-sizing-default">Title</span>
                <input asp-for="Title" class="form-control" type="text" name="Title" value="@Model.Title" aria-describedby="inputGroup-sizing-default" aria-label="Sizing example input" />
            </div>
            @*<div>
                <input asp-for="CreateDate" type="hidden" name="CreateDate" value="@Model.CreateDate" />
            </div>*@
            <div class="input-group mb-3">
                <span asp-validation-for="Description" class="input-group-text" id="inputGroup-sizing-default">Description</span>
                <input asp-for="Description" class="form-control" type="text" name="Description" value="@Model.Description" aria-describedby="inputGroup-sizing-default" aria-label="Sizing example input" />
            </div>

            <div>
                <label class="form-label">Thumbnail</label>
                <input asp-for="Thumbnail" class="form-control" type="file" name="Thumbnail" value="abnail" placeholder="" />
                <span asp-validation-for="Thumbnail"></span>
            </div>
            <div>
                <input type="hidden" name="BlogPostID" value="@Model.BlogPostID" />
            </div>

            <div>

            </div>


            <div>
                @*<input type="date" name="@Model.CreateDate" value="@Model.CreateDate" />*@
            </div>



            <textarea id="editor" name="Content"></textarea>

            <div>
                <div class="vr m-5"></div>
                <div><h4 class="fw-bold">Select Category</h4></div>
                <div @*class="row d-flex align-items-start flex-column"*@>

                    @foreach (var category in Model.AllCategories)
                    {
                        <div class="form-check form-check-inline ">
                            <label for="SelectedCategoryIds" class="form-check-label">@category.CategoryName</label>
                            <input class="form-check-input" type="checkbox" name="SelectedCategoryIds" value="@category.CategoryID"
                                   @(Model.SelectedCategoryIds.Contains(category.CategoryID) ? "checked" : "") />

                        </div>
                    }
                </div>

                @*<div class="form-check d-inline-flex justify-content-start">
                <input class="form-check-input me-3" type="checkbox" value="" id="flexCheckIndeterminate">
                <label class="form-check-label" for="flexCheckIndeterminate">
                    Indeterminate checkbox
                </label>
            </div>*@


                <div class="d-flex align-items-start mt-4">
                    <input type="submit" name="name" value="submit" class="btn btn-success " />
                </div>
            </div>







        </div>
    </form>

</div>


