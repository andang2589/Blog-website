@model List<BlogWebsite.DTO.Role.GetUsersByRoleDto>

@{
    var roleId = ViewBag.roleId;
    Layout = "_Layout";
}

<form method="post">
    <div class="card">

        <div class="card-header">
            <h3>Role: @ViewBag.RollName </h3>
        </div>
        <div class="card-header">
            <h4>Add or Remove Users From This Role</h4>
        </div>
        <div><input type="hidden" name="roleId" value="@roleId" /></div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].Id" />
                    <input type="hidden" asp-for="@Model[i].UserName" />
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].IsSelected">
                        @Model[i].UserName
                    </label>
                </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary"
                   style="width:auto" />
            <a asp-action="EditRole" asp-route-roleId="@roleId"
               class="btn btn-primary" style="width:auto">Cancel</a>
        </div>
    </div>
</form>