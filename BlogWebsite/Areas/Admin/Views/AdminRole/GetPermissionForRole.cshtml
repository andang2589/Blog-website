@{
    Layout = "_Layout";
    var roleId = ViewBag.roleId;
}

@model BlogWebsite.DTO.Role.RolePermissionDto

<h2>Assign Permissions for Role: @Model.RoleName</h2>

<form method="post" action="/Admin/AdminRole/AssignPermissionToRole">
    <input type="hidden" name="roleId" value="@Model.RoleId" />

    <table>
        <thead>
            <tr>
                <th>Permission Name</th>
                <th>Assigned</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var permission in Model.Permissions)
            {
                <tr>
                    <td class="form-check-label">@permission.Name</td>
                    <td>
                        <input class="form-check-input"
                               type="checkbox"
                               name="permissionIds"
                               value="@permission.PermissionId"
                               @(permission.IsSelected ? "checked" : "") /> <!-- Đánh dấu checkbox nếu đã được gán -->
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button class="btn btn-danger" type="submit">Save Permissions</button>
</form>

