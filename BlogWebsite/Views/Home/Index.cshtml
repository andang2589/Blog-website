@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<BlogWebsite.DTO.Blog.BlogPostDTO>
<div class="container">
    <h1 class="display-4">Welcome</h1>
    <div>
        @foreach (var post in Model)
        {

            <div class="card m-4" style="flex-direction:row">
                <div class="my-4">
                    <a href="#" style="background-image: url(@post.ThumbnailUrl); display: block; width: 160px; height:160px;border-radius:50%"></a>

                </div>

                <div class="mx-4 my-3">
                    <div class="my-2">
                        <h3>@post.Title</h3>
                    </div>
                    <div class="d-inline-flex my-2">
                        <div class="me-2">
                            <span class="m-0"><i class="bi bi-calendar"></i></span>
                            <span class="mx-0">@post.CreateDate.Value.ToString("dd/MM/yyyy")</span>
                        </div>

                        <div class="me-2">
                            @if (post.Categories != null && post.Categories.Count > 0)
                            {
                                @foreach (var cate in post.Categories)
                                {
                                    <!--<ul>-->
                                    @*<li>
                            @cate.CategoryName
                        </li>*@
                                    <!--</ul>-->
                                    <span><i class="bi bi-folder"></i></span>
                                    <span class="text-warning">@cate.CategoryName</span>
                                }
                            }

                        </div>
                        <div>
                            <span><i class="bi bi-chat-right-text"></i></span>
                            <span class="">5 Comment</span>

                        </div>
                    </div>
                    <div class="my-2">
                        @post.Description
                    </div>
                    <div class="fw-normal text-primary fs-6 my-2">
                        Read more<span class="fs-6"><i class="bi bi-chevron-right"></i></span>
                    </div>
                    
                </div>


            </div>
        }
        <div>

        </div>
    </div>



</div>
