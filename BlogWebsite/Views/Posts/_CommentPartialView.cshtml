@{
}
@using BlogWebsite.Data.Models 
@model IEnumerable<Comment>


    <ul>
        @foreach(var comment in Model)
            {
                <li>
                    <div class="@(comment.ParentID==null ? "card mt-2 border-primary" : "card mt-2")">
                        <div class="card-body">
                            <h5 class="card-title">@comment.FullName</h5>
                            <h6 class="card-subtitle mb-2 text-muted">@comment.DateCreated.DateTime</h6>
                            <p class="card-text">@comment.Content</p>
                            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#replyModal" data-comment-id="@comment.CommentID" data-blog-id="@comment.BlogPostID">Reply</button>
                            <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal" data-comment-id="@comment.CommentID ">Delete</button>

                        </div>
                    </div>

                    <partial name="_CommentPartialView" model="comment.Children" />
                </li>
            }
        
    </ul>

